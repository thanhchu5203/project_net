@model WebEazyCao.ViewModels.DepositModel;

@{
    ViewData["Title"] = "Recharge";
}

<h1>Nạp tiền</h1>

<div id="mainBody">
	<div class="container">
		<div class="row">
			<div class="span9">
				<table class="table table-bordered">
                    <form asp-action="VnPay">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label for="amount" class="control-label">Giá tiền</label>
                            <input asp-for="amount" type="number" class="form-control" />
                            <span asp-validation-for="amount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="description" class="control-label">Nội dung</label>
                            <input asp-for="description" class="form-control" />
                            <span asp-validation-for="description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="VnPay" class="btn btn-primary" />
                        </div>
                    </form>
				</table>

			</div>
		</div>
	</div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('form').submit(function (event) {
            var amount = $('#amount').val();
            if (amount < 10000 || amount > 500000) {
                event.preventDefault(); // Ngăn không cho form gửi nếu dữ liệu không hợp lệ
                alert('Số tiền nạp phải từ 10,000 đến 500,000.');
                $('#amount').focus(); // Đặt trỏ vào trường amount để người dùng có thể sửa
            }
        });
    });
</script>

