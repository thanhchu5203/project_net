@model WebEazyCao.ViewModels.ReportErrorViewModel

<h2>Báo cáo lỗi</h2>

<form asp-action="SubmitReportError" asp-controller="Account" method="post">
    <!-- Hidden field to include the OrderHistoryDetailId in the form submission -->
    <input type="hidden" asp-for="OrderHistoryDetailId" />

    <div class="form-group">
        <label for="ProductName">Tên sản phẩm</label>
        <input type="text" class="form-control" id="ProductName" value="@Model.ProductName" readonly />
    </div>
    <div class="form-group">
        <label for="Serial">Serial</label>
        <input type="text" class="form-control" id="Serial" value="@Model.Serial" readonly />
    </div>
    <div class="form-group">
        <label for="Code">Code</label>
        <input type="text" class="form-control" id="Code" value="@Model.Code" readonly />
    </div>
    <div class="form-group">
        <label for="IssueDescription">Mô tả lỗi</label>
        <!-- Use asp-for to bind the value to the IssueDescription property -->
        <textarea class="form-control" id="IssueDescription" asp-for="IssueDescription" rows="4" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Gửi báo cáo</button>
</form>

<a class="btn btn-secondary" href="@Url.Action("TransactionHistory", "Account")">Quay lại</a>
