@model WebEazyCao.Models.User
@{
    ViewData["Title"] = "Thêm Người Dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section naviheader {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a class="nav-link" href="/Admin/User">Người Dùng</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a class="nav-link" href="">Thêm</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm Người Dùng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Người Dùng</a></li>
                    <li class="breadcrumb-item active">Thêm</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông Tin</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Add", "User", FormMethod.Post, new { area = "Admin" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="content" role="tabpanel">
                        <div class="form-group">
                            <label for="Name">Tên</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Nhập tên" })
                            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Nhập email" })
                            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Phone">Điện Thoại</label>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @placeholder = "Nhập điện thoại" })
                            @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Address">Địa Chỉ</label>
                            @Html.TextBoxFor(x => x.Address, new { @class = "form-control", @placeholder = "Nhập địa chỉ" })
                            @Html.ValidationMessageFor(x => x.Address, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="UserName">Tên Đăng Nhập</label>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Nhập tên đăng nhập" })
                            @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Password">Mật Khẩu</label>
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Nhập mật khẩu" })
                            @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Money">Tiền</label>
                            @Html.TextBoxFor(x => x.Money, new { @class = "form-control", @placeholder = "Nhập tiền" })
                            @Html.ValidationMessageFor(x => x.Money, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Gửi</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
