@using Microsoft.AspNetCore.Identity
@model IdentityRole
@{
    ViewBag.Title = "Thêm mới quyền";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Danh mục</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">


    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thêm mới quyền</h3>

            <div class="card-tools">
                <a href="/admin/role/create" class="btn btn-success">Thêm mới</a>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <form method="post" asp-controller="Home" asp-action="Login">
                <div class="control-group">
                    <label class="control-label" for="Name">Tên quyền <sup>*</sup></label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="control-group">
                    <button type="submit" class="btn btn-success">Thêm mới</button>
                </div>
            </form>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->